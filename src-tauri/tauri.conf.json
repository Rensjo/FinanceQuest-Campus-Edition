{
  "$schema": "https://tauri.app/v2/config",
  "productName": "FinanceQuest",
  "version": "0.1.0",
  "identifier": "app.renkaistudios.financequest",
  "build": {
    "beforeDevCommand": "vite",
    "beforeBuildCommand": "vite build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "FinanceQuest — Campus Edition",
        "width": 1100,
        "height": 720,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "../icons/32x32.png",
      "../icons/128x128.png",
      "../icons/icon.icns",
      "../icons/icon.ico"
    ],
    "publisher": "Renkai Studios",
    "copyright": "Copyright © 2025 Renkai Studios. All rights reserved.",
    "category": "Finance",
    "shortDescription": "Personal finance management gamified for students",
    "longDescription": "FinanceQuest Campus Edition is a gamified personal finance management app designed specifically for students. Track expenses, manage budgets with envelope system, complete quests, earn badges, and level up your financial skills!",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": "en-US"
      },
      "nsis": null
    },
    "macOS": {
      "minimumSystemVersion": "10.13",
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "linux": {
      "deb": {
        "depends": []
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  },
  "plugins": {
    "notification": {
      "all": true
    }
  }
}